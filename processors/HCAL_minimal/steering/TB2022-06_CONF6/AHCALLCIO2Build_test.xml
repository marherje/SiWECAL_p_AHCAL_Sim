    </parameter>
    <!-- limit the number of processed records (run+evt): -->
    <!-- parameter name="MaxRecordNumber" value="100" /-->
    <parameter name="MaxRecordNumber" value="1000" />
    <parameter name="SkipNEvents" value="0" />
    <parameter name="SupressCheck" value="false" />
    <parameter name="Verbosity" options="DEBUG0-4,MESSAGE0-4,WARNING0-4,ERROR0-4,SILENT"> DEBUG </parameter>
  </global>


  <processor name="AHCALLCIO2BuildConversion" type="AHCALLCIO2BuildProcessor">
    <!-- Name of SimCalorimeterHit input collections -->
    <!--parameter name="Input_Collection" type="string"> ecalSD </parameter-->
    <!-- <parameter name="Input_Collections" type="string"> SiEcalCollection </parameter>-->
    <parameter name="Input_Collections" type="string"> HCALCollection </parameter>
    <!-- Name of the Sim Calorimeter Hit output collection converted to MIP -->
    <!-- <parameter name="Output_Collections" type="string"> ecalGeV2MIP </parameter> -->
    <parameter name="OutputBuildFile" type="string"> output_AHCALLCIO2Build_e_6GeV.root </parameter>
    <parameter name="NLayers" type="int"> 38 </parameter>
    <parameter name="FirstLayerPosZ" type="float"> 38.7 </parameter>
    <parameter name="LayerSpacing" type="float"> 26.2 </parameter>
    <parameter name="LayerThickness" type="float"> 3 </parameter>
    <parameter name="ConversionGeV2MIP" type="bool">true</parameter>
    <parameter name="GeV2MIPFactors" type="float"> 1./0.0268  </parameter>
    
    <parameter name="WriteRootfile" type="bool"> true </parameter>
  </processor>
</marlin>
